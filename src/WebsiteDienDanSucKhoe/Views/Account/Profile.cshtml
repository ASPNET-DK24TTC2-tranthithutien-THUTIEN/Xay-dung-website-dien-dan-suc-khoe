@model HealthForumMVC.Models.ApplicationUser
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg fade-in">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>Hồ sơ cá nhân
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="reply-avatar mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;">
                            @Model.DisplayName?.Substring(0, 1).ToUpper()
                        </div>
                        <h4 class="fw-bold">@Model.DisplayName</h4>
                        <p class="text-muted">@Model.Email</p>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Tên hiển thị</small>
                            <strong>@Model.DisplayName</strong>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Email</small>
                            <strong>@Model.Email</strong>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Ngày tham gia</small>
                            <strong>@Model.JoinedDate.ToString("dd/MM/yyyy")</strong>
                        </div>
                        <div class="col-md-6 mb-3">
                            <small class="text-muted d-block">Trạng thái</small>
                            @if (Model.IsBanned)
                            {
                                <span class="badge bg-danger">Đã khóa</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Hoạt động</span>
                            }
                        </div>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <a asp-controller="Topics" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-arrow-left me-2"></i>Quay lại diễn đàn
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
