@model IEnumerable<HealthForumMVC.Models.Topic>
@{
    ViewData["Title"] = "Danh sách chủ đề";
    var categories = ViewData["Categories"] as List<HealthForumMVC.Models.Category>;
    var currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    var totalPages = (int)(ViewData["TotalPages"] ?? 1);
    var categoryId = ViewData["CategoryId"] as int?;
    var searchQuery = ViewData["SearchQuery"] as string;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white fw-bold">
            <i class="bi bi-chat-dots me-2"></i>Danh sách chủ đề
        </h2>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle me-2"></i>Tạo chủ đề mới
            </a>
        }
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="search-box">
                            <i class="bi bi-search"></i>
                            <input type="text" name="searchQuery" value="@searchQuery" 
                                   class="form-control" placeholder="Tìm kiếm chủ đề...">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select name="categoryId" class="form-select">
                            <option value="">Tất cả chuyên mục</option>
                            @if (categories != null)
                            {
                                foreach (var cat in categories)
                                {
                                    <option value="@cat.Id" selected="@(categoryId == cat.Id)">
                                        @cat.Name
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-funnel me-2"></i>Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Topics List -->
    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                foreach (var topic in Model)
                {
                    <div class="topic-item fade-in">
                        <a href="@Url.Action("Details", new { id = topic.Id })" class="topic-title">
                            @topic.Title
                        </a>
                        <p class="text-muted mb-2">
                            @(topic.Content.Length > 200 ? topic.Content.Substring(0, 200) + "..." : topic.Content)
                        </p>
                        <div class="topic-meta">
                            <span>
                                <i class="bi bi-person-circle"></i>
                                @topic.Author?.DisplayName
                            </span>
                            <span>
                                <i class="bi bi-folder"></i>
                                <span class="badge badge-category">@topic.Category?.Name</span>
                            </span>
                            <span>
                                <i class="bi bi-clock"></i>
                                @topic.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                            </span>
                            <span>
                                <i class="bi bi-chat-dots"></i>
                                @topic.ReplyCount phản hồi
                            </span>
                            <span>
                                <i class="bi bi-heart"></i>
                                @topic.LikeCount thích
                            </span>
                            <span>
                                <i class="bi bi-eye"></i>
                                @topic.ViewCount lượt xem
                            </span>
                        </div>
                    </div>
                }

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (currentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage - 1, categoryId, searchQuery })">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, categoryId, searchQuery })">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (currentPage < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = currentPage + 1, categoryId, searchQuery })">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">Không tìm thấy chủ đề nào.</p>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-action="Create" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-circle me-2"></i>Tạo chủ đề đầu tiên
                        </a>
                    }
                </div>
            }
        </div>
    </div>
</div>
