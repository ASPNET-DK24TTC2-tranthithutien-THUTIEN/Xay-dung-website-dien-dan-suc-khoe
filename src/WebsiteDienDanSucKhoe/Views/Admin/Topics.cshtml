@model IEnumerable<HealthForumMVC.Models.Topic>
@{
    ViewData["Title"] = "Quản lý chủ đề";
    var currentPage = (int)(ViewData["CurrentPage"] ?? 1);
    var totalPages = (int)(ViewData["TotalPages"] ?? 1);
    var showDeleted = (bool)(ViewData["ShowDeleted"] ?? false);
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white fw-bold mb-0">
            <i class="bi bi-chat-dots me-2"></i>Quản lý chủ đề
        </h2>
        <a asp-action="Topics" asp-route-showDeleted="@(!showDeleted)" 
           class="btn @(showDeleted ? "btn-primary" : "btn-warning")">
            <i class="bi bi-@(showDeleted ? "eye" : "trash") me-2"></i>
            @(showDeleted ? "Hiện chủ đề hoạt động" : "Hiện chủ đề đã xóa")
        </a>
    </div>

    <div class="card shadow-lg">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Tác giả</th>
                                <th>Chuyên mục</th>
                                <th>Ngày tạo</th>
                                <th>Lượt xem</th>
                                <th>Phản hồi</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var topic in Model)
                            {
                                <tr class="@(topic.IsDeleted ? "table-danger" : "")">
                                    <td>@topic.Id</td>
                                    <td>
                                        <a href="@Url.Action("Details", "Topics", new { id = topic.Id })" 
                                           target="_blank">
                                            @(topic.Title.Length > 50 ? topic.Title.Substring(0, 50) + "..." : topic.Title)
                                        </a>
                                    </td>
                                    <td>@topic.Author?.DisplayName</td>
                                    <td>
                                        <span class="badge badge-category">
                                            @topic.Category?.Name
                                        </span>
                                    </td>
                                    <td>
                                        <small>@topic.CreatedDate.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td>@topic.ViewCount</td>
                                    <td>@topic.ReplyCount</td>
                                    <td>
                                        @if (topic.IsDeleted)
                                        {
                                            <span class="badge bg-danger">Đã xóa</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!topic.IsDeleted)
                                        {
                                            <button class="btn btn-sm btn-danger" 
                                                    onclick="deleteTopic(@topic.Id)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (currentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Topics", new { page = currentPage - 1, showDeleted })">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Topics", new { page = i, showDeleted })">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (currentPage < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Topics", new { page = currentPage + 1, showDeleted })">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">Không có chủ đề nào.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-light">
            <i class="bi bi-arrow-left me-2"></i>Quay lại Dashboard
        </a>
    </div>
</div>

@section Scripts {
    <script>
        function deleteTopic(topicId) {
            if (confirm('Bạn có chắc chắn muốn xóa chủ đề này?')) {
                $.post('@Url.Action("Delete", "Topics")/' + topicId, 
                    function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    }
                );
            }
        }
    </script>
}
