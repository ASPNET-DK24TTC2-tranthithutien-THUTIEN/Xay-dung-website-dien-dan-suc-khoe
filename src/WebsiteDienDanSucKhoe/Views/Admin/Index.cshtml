@{
    ViewData["Title"] = "Quản trị";
    var stats = ViewData["Stats"] as dynamic;
}

<div class="container">
    <h2 class="text-white fw-bold mb-4">
        <i class="bi bi-shield-check me-2"></i>Bảng điều khiển quản trị
    </h2>
    
    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Người dùng</h6>
                            <h3 class="fw-bold mb-0">@stats.TotalUsers</h3>
                        </div>
                        <div class="category-icon" style="width: 50px; height: 50px;">
                            <i class="bi bi-people"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Chủ đề</h6>
                            <h3 class="fw-bold mb-0">@stats.TotalTopics</h3>
                        </div>
                        <div class="category-icon" style="width: 50px; height: 50px; background: linear-gradient(135deg, #10b981, #059669);">
                            <i class="bi bi-chat-dots"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Phản hồi</h6>
                            <h3 class="fw-bold mb-0">@stats.TotalReplies</h3>
                        </div>
                        <div class="category-icon" style="width: 50px; height: 50px; background: linear-gradient(135deg, #f59e0b, #d97706);">
                            <i class="bi bi-chat-left-text"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="card shadow-lg border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Báo cáo chờ</h6>
                            <h3 class="fw-bold mb-0 text-danger">@stats.PendingReports</h3>
                        </div>
                        <div class="category-icon" style="width: 50px; height: 50px; background: linear-gradient(135deg, #ef4444, #dc2626);">
                            <i class="bi bi-flag"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>Hành động nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Reports" class="btn btn-outline-primary text-start">
                            <i class="bi bi-flag me-2"></i>
                            Xem báo cáo (@stats.PendingReports chờ xử lý)
                        </a>
                        <a asp-action="Users" class="btn btn-outline-primary text-start">
                            <i class="bi bi-people me-2"></i>
                            Quản lý người dùng
                        </a>
                        <a asp-action="Topics" class="btn btn-outline-primary text-start">
                            <i class="bi bi-chat-dots me-2"></i>
                            Quản lý chủ đề
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Thông tin hệ thống
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Phiên bản</small>
                        <strong>1.0.0</strong>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Trạng thái</small>
                        <span class="badge bg-success">Hoạt động</span>
                    </div>
                    <div class="mb-0">
                        <small class="text-muted d-block">Cơ sở dữ liệu</small>
                        <strong>SQL Server LocalDB</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
